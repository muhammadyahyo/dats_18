
   <%- include('parts/header')  %>
      
   <%- include('parts/navbar')  %>


    <main class="mt-4">
        <div class="container text-center">
            <h1>Registration</h1>
            <div class="row">
                <div class="col-lg-6 mx-auto mt-2 col-12">
                    <% if(error){  %> 
                        <div class="alert alert-danger"><%=error%> </div>
                    <% } %>     
                    <form action="/registration" method="POST">
                        <div class="form-floating mb-3">
                            <input type="email" name="email" class="form-control" value="admin@admin.com" id="floatingInput" autocomplete="off" placeholder="name@example.com" required>
                            <label for="floatingInput">Email address</label>
                          </div>
                          <div class="form-floating mb-3">
                            <input type="text" minlength="3" name="name" class="form-control" value="Muhammad" id="floatingInput" autocomplete="off" placeholder="John Deo" required>
                            <label for="floatingInput">Full Name</label>
                          </div>  
                          <div class="form-floating">
                            <input type="password" minlength="6" name="password" class="form-control" value="password" id="floatingPassword" autocomplete="off" placeholder="Password" required>
                            <label for="floatingPassword">Password</label>
                          </div>  
                          <button class="btn btn-primary w-100 mt-3">Registrate</button>
                    </form>
                </div>
            </div>
        </div>
    </main>





   <%- include('parts/footer')  %>  
